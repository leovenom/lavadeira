<div class="header">
  <h1>Todos os Pedidos | <%= link_to 'Novo pedido', new_order_path %></h1>
</div>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.status %></td>
        <td><%= order.client.name  %></td>
        <td><%= link_to 'Adicionar item', order %></td>
        <td><%= link_to 'Editar', edit_order_path(order) %></td>
        <td><%= link_to 'Deletar', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1 class="footer">
  <%= link_to 'Voltar', clients_path %>
<h1>